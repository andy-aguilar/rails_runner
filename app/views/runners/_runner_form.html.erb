<% if @errors %>
    <div class="error-messages">
        <% @errors.each do |msg| %>
            <div class="error-message"><%= msg %></div>
        <% end %>
    </div>
<% end %>
<%= bootstrap_form_for @runner do |f| %>
<%= fields_for :user_attributes do |u| %>
    <div class="form-group">
        <%= u.label :username, class: 'required' %>
        <%= u.text_field :username, class: 'form-control' %>
        <%= u.label :password, class: 'required' %>
        <%= u.password_field :password, class: 'form-control' %>
        <%= u.label 'Confirm password', class: 'required' %>
        <%= u.password_field :password_confirmation, class: 'form-control' %>
    </div>
<% end %>
<%= f.text_field :name %>
<%= f.number_field :age %>
<%= f.collection_select :shoe_size, (5.0..14.0).step(0.5), :to_f, :to_f  %>
<%= f.submit %>
<% end %>
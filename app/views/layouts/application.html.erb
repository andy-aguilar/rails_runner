<!DOCTYPE html>
<html>
  <head>
    <title>RailsRunner</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="/">Rails Runner</a>
      <form class="form-inline">
        <button class="btn btn-outline-primary" type="button">Main button</button>
        <div style="padding-left: 10px;">
          <button class="btn btn-outline-success" type="button">Second button</button>
        </div>
      </form>
    </nav>
    <%= yield %>
  </body>
</html>

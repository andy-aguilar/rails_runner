<h1><%= @run.run_location_and_date %></h1>

<h2>Stats:</h2>
<ul>
<li><%= "Miles: #{@run.distance}" %></li>
<li><%= "Time: #{@run.format_time}" %></li>
<li><%= "Shoe: #{@run.runner_shoe.brand_with_name}" %></li>
</ul>

<%= button_to "Edit Run", edit_run_path(@run), method: "get", class: 'btn btn-outline-dark' %>
<%= button_to "Delete Run", run_path(@run), method: "delete", data: { confirm: "Are you sure?" }, class: 'btn btn-outline-dark' %>

